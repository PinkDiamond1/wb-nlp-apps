{
    "name": "KCP/JDC Project",

    // https://code.visualstudio.com/docs/remote/devcontainerjson-reference
	"dockerComposeFile": ["../docker-compose.yml"],
	"service": "dev",
	"runServices": ["dev", "web", "php"],
	"workspaceFolder": "/workspace",

	// Set *default* container specific settings.json values on container create.
	"settings": {
		"terminal.integrated.shell.linux": "/bin/bash",
		"python.pythonPath": "/opt/conda/envs/wb_nlp/bin/python",
		"python.linting.enabled": true,
		"python.linting.pylintEnabled": true,
		"python.formatting.autopep8Path": "/opt/conda/envs/wb_nlp/bin/autopep8",
		"python.formatting.blackPath": "/opt/conda/envs/wb_nlp/bin/black",
		"python.formatting.yapfPath": "/opt/conda/envs/wb_nlp/bin/yapf",
		"python.linting.banditPath": "/opt/conda/envs/wb_nlp/bin/bandit",
		"python.linting.flake8Path": "/opt/conda/envs/wb_nlp/bin/flake8",
		"python.linting.mypyPath": "/opt/conda/envs/wb_nlp/bin/mypy",
		"python.linting.pycodestylePath": "/opt/conda/envs/wb_nlp/bin/pycodestyle",
		"python.linting.pydocstylePath": "/opt/conda/envs/wb_nlp/bin/pydocstyle",
		"python.linting.pylintPath": "/opt/conda/envs/wb_nlp/bin/pylint" //"/usr/local/py-utils/bin/pylint"
	},

	// Add the IDs of extensions you want installed when the container is created.
	"extensions": [
		"ms-python.python"
	],

	// Use 'forwardPorts' to make a list of ports inside the container available locally.
	"forwardPorts": [8000],

	// Use 'postCreateCommand' to run commands after the container is created.
    "postCreateCommand": "/opt/conda/envs/${PROJECT_ID}/bin/python -m ipykernel install --user --name=${PROJECT_ID} && /opt/conda/envs/${PROJECT_ID}/bin/python setup.py develop",

	// Comment out to connect as root instead.
	"remoteUser": "vscode"
}
